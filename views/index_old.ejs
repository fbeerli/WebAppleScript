<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./head %>
</head>
<body>
    <div id= "div_main">
    <header>
        <% include ./header %>
    </header>

    <main>
    <input type="hidden" value="<%= ip %>"</input>
        <div class="div_list">
        <table class="tbl_list">
            <tr><th>AppleScript<div id="div_reload" title="Reload Directory"><img src="/img/reload.png"></div></th>
                <th>Copy Link</th><th>Start</th>
            </tr>

            <% for(let i = 0; i < posts.length; i++) { %>
                <tr>
                    <td class="js-xhr td_as" data-path="<%= posts[i] %>">
                        <a href="" data-path="<%= posts[i] %>" class="js-xhr"><%= posts[i] %></a>
                    </td>
                    <td>
                        <button type="button" class="btn_copy" data-path="http://<%= ip %>:3000/<%= posts[i] %>">
                            Copy URL
                        </button>
                    </td>
                    <td>
                        <button type="button" class="js-xhr" data-path="<%= posts[i] %>">
                            Execute
                        </button>
                    </td>
                </tr>
            <% } %>
        </table>
        </div>
    </main>

    <footer>
        <% include ./footer %>
    </footer>
    </div>
</body>
    <script src="public/script.js"></script>
</html>
